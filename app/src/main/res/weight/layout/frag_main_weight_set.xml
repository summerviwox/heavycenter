<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:style_common="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="frag_main_weight_set"
                type="String" />
    </data>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="#10000000"
                  android:orientation="vertical">
    <LinearLayout

            android:layout_marginTop="100dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/drawable_hv_acct_role_tip"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tv_title"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="提示"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <ImageView
                    android:padding="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_close"
                    android:src="@drawable/icon_hv_close"
                    android:layout_alignParentRight="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
        </RelativeLayout>
        <View
                android:layout_marginTop="5dp"
                android:background="@color/color_grey_300"
                android:layout_width="match_parent"
                android:layout_height="1px" />


        <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            <TextView
                    android:textColor="@color/gray"
                    android:textSize="13sp"
                    android:text="新值"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_value"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color_hv_yelll"
                    android:textSize="22sp"
                    android:text="125.9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <ImageView
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/icon_hv_add2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>

            <EditText
                android:inputType="numberDecimal"
                    android:maxWidth="200dp"
                    android:minWidth="50dp"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:rotation="-90"
                        android:background="@drawable/icon_hv_into"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                <ImageView
                        android:rotation="90"
                        android:background="@drawable/icon_hv_into"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
                android:layout_marginTop="15dp"
                android:textColor="@color/gray"
                android:textSize="13sp"
                android:text="新值"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="5dp"
            android:background="@color/transparent"
            android:inputType="numberDecimal"
                android:id="@+id/tv_newvalue"
                android:textColor="@color/color_hv_yelll"
                android:textSize="32sp"
            android:minWidth="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        <com.siweisoft.heavycenter.view.text.BgTextView
                android:gravity="center"
                android:id="@+id/tv_sure"
                android:text="确定"

                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:layout_marginTop="15dp"

                android:singleLine="true"
                android:textSize="20sp"
                android:visibility="visible"
                style_common:color_one="@color/color_hv_yelll"
                style_common:stroke="0dp"
                style_common:color_stroke="@color/red"
                style_common:corner="20dp"
                style_common:color_txt="@color/white"

                style_common:color_two="@color/color_grey_400"
                style_common:stroke_two="0dp"
                style_common:color_stroke_two="@color/color_hv_yelll"
                style_common:corner_two="20dp"
                style_common:color_txt_two="@color/color_hv_yelll"
                style_common:boo_one="true"
                android:layout_width="wrap_content"
                android:layout_height="35dp" />

    </LinearLayout>
    </LinearLayout>
</layout>
