<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:style_common="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item_check_read"
            type="String" />
    </data>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.siweisoft.heavycenter.view.item.CheckIV
                android:layout_marginLeft="12.5dp"
                android:id="@+id/iv_check"
                android:src="@drawable/bg_hv_check"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <TextView
                android:id="@+id/tv_read1"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:text="我已阅读并"
                android:textColor="@color/color_grey_500"
                android:layout_gravity="left|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_agree1"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:text="同意《重心用户协议》"
                android:textColor="@color/color_hv_yelll"
                android:layout_gravity="left|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
</layout>
