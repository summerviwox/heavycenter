<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="item_acct_input_code"
            type="String" />
    </data>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/drawable_bg_edit"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/iv_left"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_hv_phone"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/et_txt"
                android:singleLine="true"
                android:textColorHint="@color/color_grey_700"
                android:hint="请输入验证码"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:gravity="center_vertical|right"
                android:text="获取验证码"
                android:textSize="15sp"
                android:textColor="@color/color_hv_yelll"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_hv_clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
</layout>
