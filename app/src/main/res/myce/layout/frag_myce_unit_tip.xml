<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="frag_myce_unit_tip"
            type="String" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0000000"
        android:orientation="vertical">
        <LinearLayout
            android:padding="5dp"
            android:background="@drawable/drawable_hv_acct_role_tip"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="提示"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/tv_close"
                    android:src="@drawable/icon_hv_close"
                    android:layout_alignParentRight="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
            </RelativeLayout>
            <View
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <TextView
                android:gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:textColor="@color/color_hv_yelll"
                android:textSize="18sp"
                android:text="该单位为空单位，您将成为单位超级管理员"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textColor="@color/gray"
                android:textSize="13sp"
                android:text="后续您也可以将此身份转移给单位下其他成员"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:id="@+id/tv_cancel"
                    android:text="返回"
                    android:textSize="22sp"
                    android:textColor="@color/color_hv_yelll"
                    android:gravity="center"
                    android:background="@drawable/drawable_radious_white"
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:id="@+id/tv_sure"
                    android:text="确定"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/drawable_hv_bg_btn_login"
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>
