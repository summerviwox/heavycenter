<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:style_common="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="frag_myce_driver"
            type="String" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.siweisoft.heavycenter.view.item.ItemView
            android:layout_marginTop="10dp"
            style_common:color_txt_right="@color/color_base_txt_heavycenter_y"
            android:id="@+id/item_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style_common:txt_left="绑定单位"
            style_common:txt_right="绑定单位"
            style_common:iv_left="@drawable/icon_hv_myce_unit"
            style_common:iv_right="@drawable/icon_hv_into"
            style_common:txt_right_bg="@drawable/bg_hv_sharp8_yell_stroke"
            style_common:bg_divider="@color/color_item_content_gap"
            />


        <com.siweisoft.heavycenter.view.item.ItemView
            android:id="@+id/item_driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style_common:txt_left=""
            style_common:txt_right=""
            style_common:iv_left="@drawable/icon_hv_myce_good"
            style_common:iv_right="@drawable/icon_hv_into"
            style_common:bg_divider="@color/color_item_content_gap"
            />



        <LinearLayout
            android:id="@+id/ll_car"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_item_content"
            android:paddingLeft="15dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:src="@drawable/icon_hv_cancle"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <TextView
                    android:id="@+id/tv_emptyweight"
                    android:layout_marginLeft="8dp"
                    android:textSize="13sp"
                    android:textColor="@color/color_grey_500"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_maxweight"
                    android:layout_marginLeft="15dp"
                    android:textSize="13sp"
                    android:textColor="@color/color_grey_500"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>


                <ImageView
                    android:src="@drawable/icon_hv_myce_fix"
                    android:textSize="12.5sp"
                    android:layout_centerInParent="true"
                    android:text="3"
                    android:gravity="center"
                    android:layout_marginRight="22.5dp"
                    android:layout_width="10dp"
                    android:layout_height="10dp"  />


            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="17sp"
                android:layout_marginLeft="17sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_dirver"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="80dp" />

                <ImageView
                    android:id="@+id/iv_car"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="80dp" />
            </LinearLayout>

            <View
                android:id="@+id/divide"
                android:background="@color/color_item_content_gap"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>


        </LinearLayout>

        <com.siweisoft.heavycenter.view.item.ItemView
            android:layout_marginTop="10dp"
            android:id="@+id/item_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            style_common:bg_divider="@color/color_item_content_gap"
            style_common:iv_left="@drawable/icon_hv_myce_setting"
            style_common:iv_right="@drawable/icon_hv_into"
            style_common:txt_left="设置"
            style_common:txt_right=""
            />
    </LinearLayout>
</layout>
